<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="pt.gu.zclock.zcActivity">
    <LinearLayout android:id="@+id/clock_layout" android:visibility="visible"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView android:id="@+id/textClock"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textSize="28sp" android:text="clock" android:textDirection="ltr"/>
    </LinearLayout>
</LinearLayout>
